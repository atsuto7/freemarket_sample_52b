= render 'users/user-registar-header/user-registar-header3'
.registar3-frame 
  .registar3-main 
    %h2.registar3-main__title
      住所入力
    .registar3-main__content
      .registar3-main__content__form
        .registar3-main__content__form__required
          %span.identification_inner___form__required__label 姓（全角）
          %p 必須
          %input{name: "first-name", type: "text", value: "", placeholder: "例)花子"}>/
        .registar3-main__content__form__required
          %span.identification_inner___form__required__label 名（全角）
          %p 必須
          %input{name: "last-name", type: "text", value: "", placeholder: "例)花子"}>/
        .registar3-main__content__form__required
          %span.identification_inner___form__required__label 姓カナ（全角）
          %p 必須
          %input{name: "first-name__kane", type: "text", value: "", placeholder: "例)ヤマダ"}>/
        .registar3-main__content__form__required
          %span.identification_inner___form__required__label 名カナ（全角）
          %p 必須
          %input{name: "last-name__kana", type: "text", value: "", placeholder: "例)ハナコ"}>/     
        .registar3-main__content__form__required
          %span.identification_inner___form__required__label 都道府県
          %p 必須
          %input{name: "prefectures", type: "text", value: "", placeholder: "例)大阪府"}>/  
        .registar3-main__content__form__required  
          %span.identification_inner___form__required__label 市区町村
          %p 必須
          %input{name: "city", type: "text", value: "", placeholder: "例)堺市東区"}>/     
        .registar3-main__content__form__required  
          %span.identification_inner___form__required__label 番地
          %p 必須
          %input{name: "address", type: "text", value: "", placeholder: "例)７番街"}>/
        .registar3-main__content__form__option  
          %span.identification_inner___form__required__label 建物名
          %p 任意
          %input{name: "address", type: "text", value: "", placeholder: "例)セブンスヘブン"}>/    
        .registar3-main__content__form__option 
          %span.identification_inner___form__required__label 電話番号
          %p 任意
          %input{name: "address", type: "text", value: "", placeholder: "例)090-1234-5678"}>/
        .registar3-main__content__form__next
          =link_to new_user_registration_payment_path, class: 'registar3-main__content__form__next' do
            次へ進む
= render 'templates/single-footer'